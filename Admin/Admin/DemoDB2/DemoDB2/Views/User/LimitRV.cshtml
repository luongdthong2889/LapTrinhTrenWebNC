@model DemoDB2.Models.CHECK

@{
    ViewBag.Title = "Giới hạn tin đăng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Giới hạn tin rao</h6>
            </div>
            <div class="card-body">


                @using (Html.BeginForm("LimitRV", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Thông tin người dùng</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        <input type="hidden" name="date" value="@Html.DisplayFor(x=>x.DateLogin)" />
                        <input type="hidden" name="manguoidung" value="@Html.DisplayFor(x=>x.MANGUOIDUNG)" />


                        
                        <div class="form-group">
                            <div class="control-label col-md-10">
                                <span>Số lần hiện tại: @Html.DisplayFor(x => x.SoLan)</span><br />
                                <span>Ngày đăng nhập lần cuối: @Html.DisplayFor(x => x.DateLogin)</span><br />
                                <span>Cập nhật số lần đăng tin:</span><br />
                                <span>Số lần *(nhập 100 với người đã donate sẽ bỏ giới hạn đăng user đó còn thành viên bình thường thì nhập 0)</span><br/>
                            </div>
                            <div class="col-md-10">
                                <input type="number" class="form-control" name="solan" />
                                @Html.ValidationMessageFor(model => model.SoLan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Về Danh sách", "Index")
                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                    <!-- Bootstrap core JavaScript-->
                    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
                    <script src="~/Content/vendor/bootstrap/~/Scripts/js/bootstrap.bundle.min.js"></script>

                    <!-- Core plugin JavaScript-->
                    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

                    <!-- Custom scripts for all pages-->
                    <script src="~/Scripts/js/sb-admin-2.min.js"></script>

                    <!-- Page level plugins -->
                    <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
                    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

                    <!-- Page level custom scripts -->
                    <script src="~/Scripts/js/demo/datatables-demo.js"></script>
                }
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
